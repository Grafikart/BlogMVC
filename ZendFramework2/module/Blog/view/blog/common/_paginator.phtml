<?php
    if ($this->pageCount) :
        if (!isset($otherParams)) {
            $otherParams = array();
        }
?>
<ul class="pagination">

    <?php if (isset($this->previous)) : ?>
    <li><a href="<?php echo $this->url($this->route, array_merge(array('page' => $this->previous), $otherParams)) ?>">&laquo;</a></li>
    <?php else : ?>
    <li><a href="#">&laquo;</a></li>
    <?php endif; ?>

    <?php foreach ($this->pagesInRange as $page) : ?>
        <?php if ($page != $this->current) : ?>
    <li><a href="<?php echo $this->url($this->route, array_merge(array('page' => $page), $otherParams)) ?>"><?php echo $page ?></a></li>
        <?php else : ?>
    <li class="active"><a href="#"><?php echo $page ?></a></li>
        <?php endif; ?>
    <?php endforeach; ?>

    <?php if (isset($this->next)) : ?>
    <li><a href="<?php echo $this->url($this->route, array_merge(array('page' => $this->next), $otherParams)) ?>">&raquo;</a></li>
    <?php else : ?>
    <li><a href="#">&raquo;</a></li>
    <?php endif; ?>
</ul>
<?php endif; ?>